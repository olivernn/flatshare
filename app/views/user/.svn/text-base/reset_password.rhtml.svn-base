<% title @page.name  %>

<div id="article_form_content">
	<h1><%= @page.name %></h1>
	<%= @page.content %>
</div>

<% form_tag :action => 'generate_password' do %>
  <fieldset>
    <legend>Enter email address</legend>
    <label for="email">Email</label>
	<%= text_field 'user', 'email' %>	
	<%= submit_tag 'Reset'%>
  </fieldset>
<% end %>
