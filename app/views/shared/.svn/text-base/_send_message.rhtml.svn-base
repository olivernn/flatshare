<% form_remote_tag (:url => {:action => 'send_message'}, :html => {:id => 'send_message'}) do%>
<fieldset id="send_message">
	<legend>Send Message</legend>
	<label for="message_subject">Subject</label>
	<%= text_field 'message', 'subject', :class => 'medium_field'%><br/>
	
	<label for="message_text">Your Message</label>
	<%= text_area 'message', 'message', :class => 'medium_area'%>
	
	<%= hidden_field 'message', 'user_id'%>
	<%= hidden_field 'message', 'from_id'%>
	<%= button 'send'%>
</fieldset>	
<% end %>
