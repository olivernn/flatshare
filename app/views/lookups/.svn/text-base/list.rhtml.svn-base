<h1>Listing lookups</h1>

<table>
  <tr>
  <% for column in Lookup.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for lookup in @lookups %>
  <tr>
  <% for column in Lookup.content_columns %>
    <td><%=h lookup.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => lookup %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => lookup %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => lookup }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @lookup_pages.current.previous } if @lookup_pages.current.previous %>
<%= link_to 'Next page', { :page => @lookup_pages.current.next } if @lookup_pages.current.next %> 

<br />

<%= link_to 'New lookup', :action => 'new' %>
